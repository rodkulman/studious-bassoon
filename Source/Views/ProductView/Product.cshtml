@model Product
<div class="modal fade" tabindex="-1" role="dialog" id="edit-product" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(Model.Id == 0 ? "Novo Produto" : "Produto #" + Model.Id.ToString())</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="ProductView" asp-action="Product" method="post">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaterialId"></label>
                        <input asp-for="MaterialId" class="form-control" />
                    </div>                    
                    <div class="form-group">
                        <label asp-for="ExpirationDays"></label>
                        <div class="input-group mb-3">  
                            <input type="number" asp-for="ExpirationDays" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text">Dias</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="STTax"></label>
                        <div class="input-group mb-3">  
                            <input asp-for="STTax" class="form-control" />
                            <div class="input-group-append">
                                <span class="input-group-text">%</span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </div>
</div>