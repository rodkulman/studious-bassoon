@{
    ViewData["Title"] = "Produtos";
}
@model List<CategoryViewModel>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th></th>
                <th>Material</th>
                <th>Nome</th>                
                <th>ST</th>
                <th>Pre√ßo</th>
                <th>Unidade por Caixa</th>
                <th>Unidade por Lastro</th>
                <th>Unidade por Palete</th>
                <th>Validade</th>                
            </tr>            
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var category in Model)
                {
                    <tr class="table-info">
                        <td colspan="9">@(category.Description)</td>
                    </tr>
                    
                    foreach (var product in category.Products)
                    {
                        @Html.Partial("ProductListItem", product)
                    }
                }
            }
        </tbody>
    </table>
</div>